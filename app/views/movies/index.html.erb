<h1>Movies list of 2015</h1>
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal"  data-target="#myModal" id="movie" href="/movies/new" >
  Add new movie
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        <form id="movie" action="movies.html"> 
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Realese year</th>
    <th>Lead Role</th>
    <th>Director</th>
    <th>Rating</th>
  </tr>
  </thead>


  <tbody id="sortable">
  <% @movies.each do |t| %>
      <tr id="<%=t.id%>" >
        <td><%= t.name %></td>
        <td><%= t.realese %></td>
        <td><%= t.actor%></td>
        <td><%= t.director%></td>
        <td><%= t.rating%>
          <div class="rateit" id="rateit">
          </div>
        </td>
        <td><%= link_to 'Destroy', t, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
  <% end %>
  </tbody>
</table>


<% form_tag movies_path, :method => 'get' do %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %>
    </p>
<% end %>


